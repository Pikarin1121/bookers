<h1>Editing Book</h1>
<%= form_with model: @book,url: update_book_path(@book.id), method: :patch, local: true do |f| %>

  <p>title</p>
  <%= f.text_field:title %>

  <p>body</p>
  <%= f.text_area:body %>

  <p>
  <%= f.submit 'Update Book' %>
  </p>

  <%= link_to "Show",book_path(@book.id) %>
   |
  <%= link_to "Back","/books" %>

<% end %>
